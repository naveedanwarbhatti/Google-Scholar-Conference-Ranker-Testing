{
  "compilerOptions": {
    "target": "es6",                     
    "module": "es6",                
    "outDir": "./build",
    "strict": true,                      
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts"
  ]
}